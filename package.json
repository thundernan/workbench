{
  "name": "workbench-monorepo",
  "version": "1.0.0",
  "description": "Workbench Game - Full Stack Application",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "server:build": "cd server && npm run build",
    "client:build": "cd client && npm run build",
    "build": "cd client && npm run build",
    "build:all": "cd server && npm run build && cd ../client && npm run build",
    "server:start": "cd server && npm start",
    "client:preview": "cd client && npm run preview",
    "start": "cd server && npm start",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "clean": "rm -rf node_modules server/node_modules client/node_modules server/dist client/dist",
    "lint:dev": "concurrently \"npm run server:lint\" \"npm run client:lint\"",
    "server:lint": "cd server && npm run lint",
    "client:lint": "cd client && npm run lint"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "workbench",
    "game",
    "blockchain",
    "web3",
    "vue",
    "nodejs",
    "mongodb"
  ],
  "author": "Workbench Team",
  "license": "MIT"
}

