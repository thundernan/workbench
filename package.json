{
  "name": "workbench-monorepo",
  "version": "1.0.0",
  "description": "Workbench Game - Full Stack Application",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "cd server && npm run dev",
    "client:dev": "cd client && npm run dev",
    "server:build": "cd server && npm run build",
    "client:build": "cd client && npm run build",
    "build": "npm run server:build && npm run client:build",
    "build:netlify": "cd client && npm install && npm run build",
    "build:all": "npm run install:all && npm run build",
    "build:concurrent": "concurrently \"npm run server:build\" \"npm run client:build\"",
    "server:start": "cd server && npm start",
    "client:preview": "cd client && npm run preview",
    "start": "concurrently \"npm run server:start\" \"npm run client:preview\"",
    "install:all": "npm install && cd server && npm install && cd ../client && npm install",
    "install:concurrent": "npm install && concurrently \"cd server && npm install\" \"cd client && npm install\"",
    "clean": "rm -rf node_modules server/node_modules client/node_modules server/dist client/dist",
    "lint": "concurrently \"npm run server:lint\" \"npm run client:lint\"",
    "server:lint": "cd server && npm run lint",
    "client:lint": "cd client && npm run lint",
    "netlify:dev": "netlify dev",
    "netlify:deploy": "netlify deploy --prod"
  },
  "dependencies": {
    "serverless-http": "^3.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "netlify-cli": "^17.10.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "workbench",
    "game",
    "blockchain",
    "web3",
    "vue",
    "nodejs",
    "mongodb"
  ],
  "author": "Workbench Team",
  "license": "MIT"
}

