# Server Configuration
PORT=3001
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/workbench
# For MongoDB Atlas:
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/workbench?retryWrites=true&w=majority
MONGODB_DB_NAME=workbench

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
# For production, set to your frontend domain:
# CORS_ORIGIN=https://craft-hack.netlify.app

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

